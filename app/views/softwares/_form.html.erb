<%= form_with(model: software) do |form| %>
  <% if software.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(software.errors.count, "error") %> prohibited this software from being saved:</h2>

      <ul>
        <% software.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.fields_for :product do |f| %>
    <div class="field">
      <%= f.label "Nome", :class => "form-label" %>
      <%= f.text_field :name, :class => "form-control" %>
    </div>

    <div class="field">
      <%= f.label "Preço", :class => "form-label" %>
      <%= f.text_field :price, :class => "form-control" %>
    </div>

    <div class="field">
      <%= f.label "Fornecedor", :class => "form-label" %>
      <%= f.collection_select :vendor_id, Vendor.order(:name), :id, :name,  {prompt: "Selecione o Fornecedor..."}, {class: "form-select"}  %>
    </div>

    <div class="field">
      <%= f.label "Descrição", :class => "form-label" %>
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  <% end %>
  <div class="field">
    <%= form.label "Versão", :class => "form-label" %>
    <%= form.text_field :version, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label "Linguagem", :class => "form-label" %>
    <%= form.text_field :language, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label "Tipo", :class => "form-label" %>
    <%= form.text_field :category, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Salvar", :class => "btn btn-primary text-white col-2" %>
  </div>
<% end %>
