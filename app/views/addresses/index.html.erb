<div class="container h-75">
  <div class="row">
<p id="notice"><%= notice %></p>

<h1 class="col-10">Endereços</h1>
<%= link_to 'Novo Endereço', new_address_path, :class => "btn btn-primary text-white col-2 align-self-end" %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Setor</th>
      <th>Complemento</th>
      <th>Cep</th>
      <th>Cidade</th>
      <th>Pais</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.district %></td>
        <td><%= address.complement %></td>
        <td><%= address.cep %></td>
        <td><%= address.city %></td>
        <td><%= address.country %></td>
        <td><div class="d-flex btn-group" role="group" aria-label="Basic example">
                  <%= link_to 'Info', address,  :class => "btn btn-success text-white" %>
                  <%= link_to 'Alterar', edit_address_path(address),  :class => "btn btn-warning text-white" %>
                  <%= link_to 'Remover', address, method: :delete, data: { confirm: 'Confirma a remoção os dados?(Estes não poderam ser recuperados)' },  :class => "btn btn-danger text-white" %>
                </div>
            </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  
  </div>
</div>