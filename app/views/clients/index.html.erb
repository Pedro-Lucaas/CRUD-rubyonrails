<div class="container h-75">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <h1 class="col-10">Cliente</h1>
    <%= link_to 'Novo Cliente', new_client_path, :class => "btn btn-primary text-white col-2 align-self-end" %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>RG</th>
          <th>Celular</th>
          <th>Endere√ßo</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.name %></td>
            <td><%= client.rg %></td>
            <td><%= client.phone %></td>
            <td><%= client.address.district %></td>
            <td><div class="d-flex btn-group" role="group" aria-label="Basic example">
                  <%= link_to 'Info', client,  :class => "btn btn-success text-white" %>
                  <%= link_to 'Alterar', edit_client_path(client),  :class => "btn btn-warning text-white" %>
                  <%= link_to 'Remover', client, method: :delete, data: { confirm: 'Are you sure?' },  :class => "btn btn-danger text-white" %>
                </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    
  </div>
</div>
