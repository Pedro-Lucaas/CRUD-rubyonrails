<div class="container h-75">
  <div class="d-flex row">    
    <p id="notice"><%= notice %></p>

    <h1>Pedidos</h1>


    <%= render 'form', order: @order %>


    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Cliente</th>
          <th>N° Pedido</th>
          <th>Produto</th>
          <th>Preço U.</th>
          <th>Quantidade</th>
          <th>Total</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.client.name %></td>
            <td><%= order.id %></td>
            <td><%= order.products.first.name %></td>
            <td><%= "R$ "+order.products.first.price + ",00" %></td>
            <td><%= order.order_products.first.quantity%></td>
            <td><%= "R$ "+String(Integer(order.products.first.price) * Integer(order.order_products.first.quantity))+ ",00" %></td>
            <td><div class="d-flex btn-group" role="group" aria-label="Basic example">
                  <%= link_to 'Remover', order, method: :delete, data: { confirm: 'Are you sure?' },  :class => "btn btn-outline-danger text-danger" %>
                </div>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
 </div>
</div>